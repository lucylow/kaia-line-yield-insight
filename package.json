{
  "name": "line-yield-monorepo",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "vite",
    "dev:web": "pnpm --filter @line-yield/web-app dev",
    "dev:shared": "pnpm --filter @line-yield/shared dev",
    "build": "tsc && vite build",
    "build:dev": "vite build --mode development",
    "build:all": "pnpm --filter @line-yield/shared build && pnpm --filter @line-yield/web-app build",
    "build:web": "pnpm --filter @line-yield/web-app build",
    "build:shared": "pnpm --filter @line-yield/shared build",
    "build:lovable": "tsc && vite build --mode production",
    "preview": "vite preview",
    "install:all": "pnpm install && pnpm --filter @line-yield/shared install && pnpm --filter @line-yield/web-app install",
    "clean": "pnpm --filter @line-yield/shared clean && pnpm --filter @line-yield/web-app clean"
  },
  "dependencies": {
    "@radix-ui/react-accordion": "^1.2.12",
    "@radix-ui/react-alert-dialog": "^1.1.15",
    "@radix-ui/react-avatar": "^1.1.10",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-progress": "^1.1.7",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-separator": "^1.1.7",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-switch": "^1.2.6",
    "@radix-ui/react-tabs": "^1.1.13",
    "@radix-ui/react-toast": "^1.2.15",
    "@radix-ui/react-toggle": "^1.1.10",
    "@radix-ui/react-tooltip": "^1.2.8",
    "@stripe/react-stripe-js": "^4.0.2",
    "@stripe/stripe-js": "^7.9.0",
    "@supabase/supabase-js": "^2.57.4",
    "@tanstack/react-query": "^4.29.0",
    "@types/node": "^20.19.14",
    "@vitejs/plugin-react-swc": "^4.0.1",
    "axios": "^1.6.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.0.0",
    "ethers": "^6.15.0",
    "lovable-tagger": "^1.1.9",
    "lucide-react": "^0.544.0",
    "qrcode.react": "^4.2.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.8.0",
    "recharts": "^3.2.0",
    "tailwind-merge": "^2.0.0",
    "tailwindcss-animate": "^1.0.7",
    "viem": "^1.19.0",
    "wagmi": "^1.4.0"
  },
  "devDependencies": {
    "@types/react": "^18.3.24",
    "@types/react-dom": "^18.3.7",
    "@vitejs/plugin-react": "^4.7.0",
    "autoprefixer": "^10.4.21",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.17",
    "typescript": "^5.9.2",
    "vite": "^5.4.20"
  }
}
