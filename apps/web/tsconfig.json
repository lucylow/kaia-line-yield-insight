{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "strict": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noFallthroughCasesInSwitch": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@shared/*": ["src/shared/*"]
    }
  },
  "include": [
    "src/main.tsx",
    "src/App-minimal.tsx",
    "src/index.css"
  ],
  "exclude": [
    "node_modules",
    "packages",
    "backend",
    "contracts",
    "src/providers/**/*",
    "src/App-original.tsx",
    "src/App-simple.tsx",
    "src/sdk/**/*",
    "src/services/**/*",
    "src/hooks/**/*",
    "src/pages/**/*",
    "src/router/**/*",
    "src/utils/**/*",
    "src/lib/**/*",
    "src/types/**/*",
    "src/styles/**/*",
    "src/assets/**/*",
    "src/data/**/*",
    "src/components/**/*"
  ]
}
